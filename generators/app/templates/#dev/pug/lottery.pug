	// Section steps
	section(class=`${lotteryName}-section ${lotteryName}-section--steps`)
	// Section steps


	// Content -----------------------------------------------------------------------------------------------------------




	// Modal -------------------------------------------------------------------------------------------------------------


	// Enter
	-modal = 'modal-enter'
	+addModal(modal, false, false)
	// Enter



	// Rules
	-modal = 'modal-rules'
	+addModal(modal, false, false)
	// Rules



	// Tickets
	-modal = 'modal-tickets'
	+addModal(modal, false, false)
