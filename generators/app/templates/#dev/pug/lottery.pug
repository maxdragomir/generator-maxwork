extends layouts/__main


block variables
  -
    devMode          = true
    demoPanel        = true
    lotteryName      = '<%= project %>'
    pageType         = 'lottery'
    breadcrumbsText  = lotteryName
    breadcrumbs      = true
    rtl              = <%= rtl %>
    fullHD           = true
    styles           = true
    js               = true


  //- Data -------------------------------------------------------------------------------------------------------------
  include data/data
  include sources/lottery
  //- Data -------------------------------------------------------------------------------------------------------------


block content

  // Content -----------------------------------------------------------------------------------------------------------


  // Section main
  +b.SECTION.section--main(id=`${lotteryName}-show-main`)
    +addTestText
  // Section main


  // Content -----------------------------------------------------------------------------------------------------------




  // Modal -------------------------------------------------------------------------------------------------------------


  // Enter
  -modal = 'modal-enter'
  +addModal(modal, customClose=false, customBg=false, modalNumber=false)
  // Enter



  // Rules
  -modal = 'modal-rules'
  +addModal(modal, customClose=false, customBg=false, modalNumber=false)
  // Rules



  // Tickets
  -modal = 'modal-tickets'
  +addModal(modal, customClose=false, customBg=false, modalNumber=false)
  // Tickets



  // Hello
  -modal = 'modal-hello'
  +addModal(modal, customClose=true, customBg=false, modalNumber=false)
  // Hello


  // Modal -------------------------------------------------------------------------------------------------------------




  // Demo --------------------------------------------------------------------------------------------------------------
  if demoPanel
    +addDemo(

      <%_ if (raffle) { -%>
      '#raffle',
      <%_ } -%>
      <%_ if (account) { -%>
      '#account',
      <%_ } -%>

      <%_ if (rtl) { -%>
      '@RTL',
      <%_ } -%>

      'enter',
      'rules',
      'tickets',
      'hello'
      )
  // Demo --------------------------------------------------------------------------------------------------------------
