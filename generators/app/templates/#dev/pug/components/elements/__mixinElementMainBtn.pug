//- Mixin element mainBtn
//- ====================================================================================================================


mixin addMainBtn(btnText, btnClassMod, btnClass, link)
  - btnText = btnText || "Сделать Ставку"
  - btnClassMod = btnClassMod || "custom"
  - btnClass = btnClass || ""

  a(href='javascript:;' class=`${lotteryName}-button ${lotteryName}-button--${btnClassMod} ${btnClass} `)&attributes(
    attributes)
    span= btnText
  if link
    a(href='javascript:;' class=`${lotteryName}-link` @click="$modal.show('modal-rules')")
      span(class=`${lotteryName}-link__text`) Правила
